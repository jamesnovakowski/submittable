<p id="notice"><%= notice %></p>

<h1>Submissions</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Gender</th>
      <th>City</th>
      <th>State</th>
      <th>Age</th>
      <th>Permission</th>
      <th>Permission type</th>
      <th>Submission type</th>
      <th>Theme</th>
      <th>Title</th>
      <th>P name minor</th>
      <th>P age minor</th>
      <th>P gender of minor</th>
      <th>P city</th>
      <th>P state</th>
      <th>P name parent</th>
      <th>P permission</th>
      <th>P permission type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @submissions.each do |submission| %>
      <tr>
        <td><%= submission.first_name %></td>
        <td><%= submission.last_name %></td>
        <td><%= submission.gender %></td>
        <td><%= submission.city %></td>
        <td><%= submission.state %></td>
        <td><%= submission.age %></td>
        <td><%= submission.permission %></td>
        <td><%= submission.permission_type %></td>
        <td><%= submission.submission_type %></td>
        <td><%= submission.theme %></td>
        <td><%= submission.title %></td>
        <td><%= submission.p_name_minor %></td>
        <td><%= submission.p_age_minor %></td>
        <td><%= submission.p_gender_of_minor %></td>
        <td><%= submission.p_city %></td>
        <td><%= submission.p_state %></td>
        <td><%= submission.p_name_parent %></td>
        <td><%= submission.p_permission %></td>
        <td><%= submission.p_permission_type %></td>
        <td><%= link_to 'Show', submission %></td>
        <td><%= link_to 'Edit', edit_submission_path(submission) %></td>
        <td><%= link_to 'Destroy', submission, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Submission', new_submission_path %>
